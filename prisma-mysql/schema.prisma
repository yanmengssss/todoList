generator client {
  provider = "prisma-client-js"
  output   = "../prisma-mysql-client"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())  
  title       String
  description String?
  status      String
  priority    Int
  endAt       DateTime?
  userId      Int
  favorite    Boolean @default(false)
  tags        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Tags {
  id          Int      @id @default(autoincrement())  
  text        String
  color       String?
}

model User {
  id          Int      @id @default(autoincrement())
  userID      String   @unique
  email       String   @unique
  name        String?  @default("")
  password    String?  @default("")
  avatar      String?  @default("")
  phone       String?  @default("")
  githubID    String?  @default("")
  googleID    String?  @default("")
  tags        Json?  @default(dbgenerated("'[]'"))
  tasks       Json?  @default(dbgenerated("'[]'"))
  wxID        String?  @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
